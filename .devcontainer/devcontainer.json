{
  "name": "Jamstack",
  "image": "mcr.microsoft.com/devcontainers/base:0-bullseye",
  "features": {
    // General
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },

    // Static Site Generator
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/hugo:1": {
      "version": "0.91.2",
      "extended": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // General
        "DavidAnson.vscode-markdownlint",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "GitHub.vscode-pull-request-github",
        "redhat.vscode-yaml",
        "Tyriar.sort-lines",

        // TypeScript
        "dbaeumer.vscode-eslint",

        // Static Site Generator
        "budparr.language-hugo-vscode",
        "eliostruyf.vscode-hugo-themer"

        // "bierner.markdown-mermaid",
        // "christian-kohler.npm-intellisense",
        // "DavidAnson.vscode-markdownlint",
        // "humao.rest-client"
        // "patbenatar.advanced-new-file"
        // "sleistner.vscode-fileutils",
        // "wix.vscode-import-cost"
      ],
      "settings": {
        // General
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.linkedEditing": true,
        "explorer.fileNesting.enabled": true,
        "files.autoSave": "onFocusChange",
        "git.autofetch": true,
        "search.exclude": {
          "**/*.code-search": true,
          "**/bower_components/": true,
          "**/node_modules/": true,
          "**/package-lock.json": true
        },
        "typescript.updateImportsOnFileMove.enabled": "always",

        // ZSH
        "terminal.integrated.defaultProfile.linux": "zsh",

        // GitLens
        "gitlens.currentLine.enabled": false,

        // Prettier
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.ignorePath": ".gitignore",
        "prettier.requireConfig": true,

        // ESLint
        "eslint.options": {
          "ignorePath": ".gitignore"
        }
      }
    },
    "codespaces": {
      "openFiles": ["README.md"]
    }
  },
  "containerEnv": {
    "CI": "false",
    "NODE_ENV": "development"
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "bash .devcontainer/scripts/updateContentCommand.sh > ~/updateContentCommand.log",
  // "postStartCommand": "nohup bash -c .devcontainer/scripts/postStartCommand.sh > ~/postStartCommand.log",
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Web",
      "onAutoForward": "openPreview"
    }
  }
}
